@model IEnumerable<System_Manage.Models.Custumer>

@{

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- page css -->
<link href="~/admin/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">

<div class="header-sub-title">
    <nav class="breadcrumb breadcrumb-dash">
        <a class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <span class="breadcrumb-item active">Custumer</span>
    </nav>
</div>

<a class="btn btn-outline-info btn-sm add" asp-area="Admin" asp-controller="Custumers" asp-action="Create" title="Create" style="margin-bottom: 20px">
    New Custumer <i class="bx bx-list-plus"></i>
</a>
<div class="card">
    <div class="card-body">
        <table id="data-table" class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>MST</th>
                   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cus in Model)
                {
                    <tr>
                        <td>@cus.Name</td>
                        <td>@cus.Address</td>

                        <td>@cus.Phone</td>
                        <td>
                            @cus.Mst
                        </td>
                        
                        
                        <td>
                            <a class="btn btn-outline-success btn-sm edit" asp-area="Admin" asp-controller="Custumers" asp-action="Edit" asp-route-id="@cus.Id" title="Edit">
                                Edit <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a class="btn btn-outline-danger btn-sm delete" asp-area="Admin" asp-controller="Custumers" asp-action="Delete" asp-route-id="@cus.Id" title="Delete">
                                Delete <i class="fas fa-pencil-alt"></i>
                            </a>
                        </td>

                    </tr>

                }

            </tbody>
            <tfoot>

                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>MST</th>

                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts {

    <!-- page js -->
    <script src="~/admin/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
}